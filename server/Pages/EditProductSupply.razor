@page "/edit-product-supply/{SupplyID}"
@layout MainLayout
@inherits IyaElepoApp.Pages.EditProductSupplyComponent

@using Radzen
@using Radzen.Blazor
@using IyaElepoApp.Models.ConData
@using Microsoft.AspNetCore.Identity;
@using IyaElepoApp.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<RadzenContent Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm Data="@productsupply" TItem="IyaElepoApp.Models.ConData.ProductSupply" Visible="@(productsupply != null)" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="SupplyDate" style="width: 100%" Text="Supply Date">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDatePicker DateFormat="dd/MM/yyyy" style="display: block; width: 100%" @bind-Value="@(productsupply.SupplyDate)" Name="SupplyDate">
                </RadzenDatePicker>
                <RadzenRequiredValidator Component="SupplyDate" style="position: absolute" Text="Supply Date is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="ProductSupplierID" style="width: 100%" Text="Product Supplier">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown Data="@getProductSuppliersResult" Placeholder="Choose Product Supplier" style="display: block; width: 100%" TextProperty="ProductSupplierName" @bind-Value="@(productsupply.ProductSupplierID)" ValueProperty="ProductSupplierID" Name="ProductSupplierID">
                </RadzenDropDown>
                <RadzenRequiredValidator Component="ProductSupplierID" DefaultValue="0" style="position: absolute" Text="Product Supplier is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="ProductID" style="width: 100%" Text="Product">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown Data="@getProductsResult" Placeholder="Choose Product" style="display: block; width: 100%" TextProperty="ProductName" @bind-Value="@(productsupply.ProductID)" ValueProperty="ProductID" Name="ProductID">
                </RadzenDropDown>
                <RadzenRequiredValidator Component="ProductID" DefaultValue="0" style="position: absolute" Text="Product is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="QuantityInLitres" style="width: 100%" Text="Quantity In Litres">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(productsupply.QuantityInLitres)" Name="QuantityInLitres">
                </RadzenNumeric>
                <RadzenRequiredValidator Component="QuantityInLitres" style="position: absolute" Text="Quantity In Litres is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
